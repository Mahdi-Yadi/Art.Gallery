@using Art.Gallery.Common

@model Art.Gallery.Emails.MailDTO

<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پیغام سیستم</title>
</head>

<body style=" font-family: Arial, sans-serif; background-color: #faf4fa; color: #333; margin: 0; padding: 0; direction: rtl; text-align: right;">
    <div style="  max-width: 800px; margin: 0 auto; background-color: #ffffff; border: 1px solid #e0e0e0; border-radius: 8px; overflow: hidden;">

        <table style="width: 100%; min-height: 240px; text-align: center; background-repeat: no-repeat; background-size: cover; background-position: center center; background-image: url(https://technoto.blog/cms/Images/EmailImages/cta-bg.jpg);">

            <tr style="height: 50px;">
                <td></td>
            </tr>

            <tr>
                <td>
                    <img style="max-width: 100px;" src="https://technoto.blog/cms/Images/EmailImages/technotoorg.png"
                         alt="Technoto">
                </td>
            </tr>

            <tr>
                <td>
                    <h1 style="color: #fff; font-size: 24px; padding: 0; margin: 0; ">Technoto Group</h1>
                </td>
            </tr>

            <tr style="height: 50px;">
                <td></td>
            </tr>

        </table>
        <img style="width: 100px; height: 100px; margin-top: -60px; margin-right: 20px;" src="https://technoto.blog/cms/Images/EmailImages/faq-1.png" alt="FAQ">

        <div style="padding: 20px; padding-top: 0;">
            <h3 style=" color: #4a4a4a;">توضیحات:</h3>
            <p style="line-height: 1.6;">
                @Model.Description
            </p>
            <hr />
            <p>
                <strong>تاریخ:</strong>
                @DateTime.Now.ToShamsiDate()
            </p>
            <p>
                برای کسب اطلاعات بیشتر به سایت ما مراجعه کنید.
                <a href="https://technoto.blog/contact-us">
                    <img src="https://technoto.blog/cms/Images/EmailImages/pic1.png" width="50" height="50" />
                </a>
            </p>
            <div style="text-align: center;">
                <a href="@Model.Link"
                   style="display: inline-block; margin-top: 20px; padding: 10px 20px; background-color: #490c7a; color: #e5f1f5; text-decoration: none; border-radius: 5px;">
                    @Model.ButtonTitle
                </a>
            </div>
        </div>

        <a href="https://technoto.org" target="_blank">
            <div style="text-align: left;">
                <img src="https://technoto.blog/cms/Images/EmailImages/technotoblog.png" width="50" height="50" />
                <img src="https://technoto.blog/cms/Images/EmailImages/technotoapp.png" width="50" height="50" />
            </div>
        </a>
        <div style="background-color: #222f3b; padding: 10px; text-align: center; color: #ffffff; font-size: 12px;">
            2025 تمامی حقوق محفوظ است -
            <a href="https://technoto.blog" target="_blank" style="color: #B565F7; text-decoration: none;">Technoto</a>
        </div>

    </div>
</body>

</html>